<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.razvalla.razvan.soundmaster" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Activities.MusicPlayer"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".MusicService.MusicService" />

        <activity
            android:name=".Activities.MusicObjectListActivity"
            android:label="@string/title_activity_music_object_list" >
        </activity>
        <activity
            android:name=".Activities.SimpleMusicListActivity"
            android:label="@string/title_activity_simple_music_list" >
        </activity>
        <activity
            android:name=".Activities.SimpleObjectListActivity"
            android:label="@string/title_activity_simple_music_list" >
        </activity>
        <activity
            android:name=".Activities.MusicPlayerController"
            android:label="@string/title_activity_music_player_controller" >
        </activity>
    </application>

</manifest>
